{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./lib/*"],
      "@/content/*": ["./content/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "jsx": "preserve",
    "types": [
      "contentlayer/generated"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", 
    "./.contentlayer/generated"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
